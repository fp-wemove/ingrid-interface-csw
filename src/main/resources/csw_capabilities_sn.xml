            <ows:DCP>
                <ows:HTTP>
                    <ows:Get xlink:href="http://portalu.de/csw_capabilities/partner/sn" />
                    <ows:Post xlink:href="http://portalu.de/csw_capabilities/partner/sn">
                        <ows:Constraint name="PostEncoding">
                            <ows:Value>SOAP</ows:Value>
                        </ows:Constraint>
                    </ows:Post>
                    <ows:Post xlink:href="http://portalu.de/csw_capabilities/partner/sn">
                        <ows:Constraint name="PostEncoding">
                            <ows:Value>XML</ows:Value>
                        </ows:Constraint>
                    </ows:Post>
                </ows:HTTP>
            </ows:DCP>
        </ows:Operation>
